// Build weights table
const weightsTableBody = document.querySelector('#weights-table tbody');
const domainNames = Object.keys(domainsData);
const weightsInputs = {};
domainNames.forEach((domain) => {
  const tr = document.createElement('tr');
  const tdName = document.createElement('td');
  tdName.textContent = domain;
  const tdWeight = document.createElement('td');
  const input = document.createElement('input');
  input.type = 'number';
  input.min = '0';
  input.step = '0.01';
  input.value = (1 / domainNames.length).toFixed(3);
  weightsInputs[domain] = input;
  tdWeight.appendChild(input);
  tr.appendChild(tdName);
  tr.appendChild(tdWeight);
  weightsTableBody.appendChild(tr);
});

// Build domains and capabilities assessment UI
const assessmentSection = document.getElementById('assessment-section');
domainNames.forEach((domain) => {
  const domainDiv = document.createElement('div');
  domainDiv.className = 'domain';
  // Header
  const header = document.createElement('div');
  header.className = 'domain-header';
  header.innerHTML = `<span><strong>${domain}</strong></span><span></span>`;
  domainDiv.appendChild(header);
  // Content
  const content = document.createElement('div');
  content.className = 'domain-content';
  // Capabilities
  domainsData[domain].forEach((cap) => {
    const capRow = document.createElement('div');
    capRow.className = 'capability-row';
    // capability name
    const capName = document.createElement('div');
    capName.className = 'capability-name';
    capName.textContent = cap.name;
    capRow.appendChild(capName);
    // level select
    const selectDiv = document.createElement('div');
    selectDiv.className = 'level-select';
    const select = document.createElement('select');
    for (let i = 1; i <= 5; i++) {
      const opt = document.createElement('option');
      opt.value = i;
      opt.textContent = i;
      select.appendChild(opt);
    }
    selectDiv.appendChild(select);
    capRow.appendChild(selectDiv);
    // details button
    const detailsBtnDiv = document.createElement('div');
    detailsBtnDiv.className = 'details-btn';
    const btn = document.createElement('button');
    btn.className = 'details-btn';
    btn.type = 'button';
    btn.textContent = 'Details';
    btn.addEventListener('click', () => {
      showModal(cap.name, cap.levels);
    });
    detailsBtnDiv.appendChild(btn);
    capRow.appendChild(detailsBtnDiv);
    // store select element for later
    capRow.dataset.capabilityName = cap.name;
    capRow.dataset.domainName = domain;
    capRow.selectElement = select;
    content.appendChild(capRow);
  });
  domainDiv.appendChild(content);
  assessmentSection.appendChild(domainDiv);
  // Toggle content display
  header.addEventListener('click', () => {
    const isVisible = content.style.display === 'block';
    content.style.display = isVisible ? 'none' : 'block';
    header.querySelector('span:last-child').textContent = isVisible ? '' : '';
  });
});

function showModal(capName, levels) {
  const modalOverlay = document.getElementById('modal-overlay');
  const modalCapName = document.getElementById('modal-cap-name');
  const modalLevelDetails = document.getElementById('modal-level-details');
  modalCapName.textContent = capName;
  modalLevelDetails.innerHTML = '';
  levels.forEach((desc, idx) => {
    const li = document.createElement('li');
    li.innerHTML = `<strong>Level ${idx + 1}:</strong> ${desc}`;
    modalLevelDetails.appendChild(li);
  });
  modalOverlay.style.display = 'flex';
}

// Close modal
const closeModalBtn = document.getElementById('close-modal');
const modalOverlay = document.getElementById('modal-overlay');
closeModalBtn.addEventListener('click', () => {
  modalOverlay.style.display = 'none';
});

function calculateResults() {
  let totalWeight = 0;
  const domainWeights = {};
  domainNames.forEach((domain) => {
    const val = parseFloat(weightsInputs[domain].value);
    domainWeights[domain] = isNaN(val) || val < 0 ? 0 : val;
    totalWeight += domainWeights[domain];
  });
  if (totalWeight === 0) {
    domainNames.forEach((domain) => { domainWeights[domain] = 1; });
    totalWeight = domainNames.length;
  }
  domainNames.forEach((domain) => {
    domainWeights[domain] = domainWeights[domain] / totalWeight;
  });
  const domainScores = {};
  const domainWeightedScores = {};
  const allCapabilityRows = document.querySelectorAll('.capability-row');
  const domainSelections = {};
  domainNames.forEach(d => { domainSelections[d] = []; });
  allCapabilityRows.forEach((row) => {
    const d = row.dataset.domainName;
    const level = parseInt(row.selectElement.value);
    domainSelections[d].push(level);
  });
  domainNames.forEach((d) => {
    const levels = domainSelections[d];
    const avg = levels.reduce((sum, val) => sum + val, 0) / levels.length;
    domainScores[d] = avg;
    domainWeightedScores[d] = avg * domainWeights[d];
  });
  const overallScore = Object.values(domainWeightedScores).reduce((sum, v) => sum + v, 0);
  const resultsSection = document.getElementById('results-section');
  resultsSection.innerHTML = '<h2>3. Results</h2>';
  const overallDiv = document.createElement('div');
  overallDiv.className = 'result-item';
  overallDiv.innerHTML = `<h3>Overall Maturity Score: ${overallScore.toFixed(2)} / 5</h3>`;
  const progressContainer = document.createElement('div');
  progressContainer.className = 'progress-bar';
  const progressFill = document.createElement('div');
  progressFill.className = 'progress-fill';
  progressFill.style.width = `${(overallScore / 5 * 100).toFixed(1)}%`;
  progressContainer.appendChild(progressFill);
  overallDiv.appendChild(progressContainer);
  resultsSection.appendChild(overallDiv);
  domainNames.forEach((d) => {
    const item = document.createElement('div');
    item.className = 'result-item';
    const score = domainScores[d];
    const weight = domainWeights[d];
    item.innerHTML = `<strong>${d}</strong>: Score = ${score.toFixed(2)} / 5 (Weight: ${(weight*100).toFixed(1)}%)`;
    const bar = document.createElement('div');
    bar.className = 'progress-bar';
    const fill = document.createElement('div');
    fill.className = 'progress-fill';
    fill.style.width = `${(score / 5 * 100).toFixed(1)}%`;
    bar.appendChild(fill);
    item.appendChild(bar);
    resultsSection.appendChild(item);
  });
  const recSection = document.getElementById('recommendations-section');
  recSection.innerHTML = '<h2>4. Recommendations</h2>';
  let recCount = 0;
  const listContainer = document.createElement('div');
  allCapabilityRows.forEach((row) => {
    const domain = row.dataset.domainName;
    const capName = row.dataset.capabilityName;
    const currentLevel = parseInt(row.selectElement.value);
    if (currentLevel >= 1 && currentLevel < 5) {
      const nextLevel = currentLevel + 1;
      const recDataDomain = recommendationsData[domain] || {};
      const recDataCap = recDataDomain[capName] || {};
      const recDataLevel = recDataCap[currentLevel] || {};
      const rec = recDataLevel[nextLevel] || {};
      if (rec && rec.recommendation) {
        const recItem = document.createElement('div');
        recItem.className = 'recommendation-item';
        recItem.innerHTML = `<h4>${domain}  ${capName}</h4>` +
                            `<p><strong>Current Level:</strong> ${currentLevel}  <strong>Target Level:</strong> ${nextLevel}</p>` +
                            `<p><strong>Recommendation:</strong> ${rec.recommendation}</p>` +
                            (rec.deliverable ? `<p><strong>Deliverable/Evidence:</strong> ${rec.deliverable}</p>` : '') +
                            (rec.effort ? `<p><strong>Effort:</strong> ${rec.effort}</p>` : '') +
                            (rec.impact ? `<p><strong>Impact:</strong> ${rec.impact}</p>` : '');
        listContainer.appendChild(recItem);
        recCount++;
      }
    }
  });
  if (recCount === 0) {
    recSection.innerHTML += '<p>No recommendations. All capabilities are at the highest level.</p>';
  } else {
    recSection.appendChild(listContainer);
  }
}

const calculateBtn = document.getElementById('calculate-btn');
calculateBtn.addEventListener('click', calculateResults);
</script>
</body>
</html>
