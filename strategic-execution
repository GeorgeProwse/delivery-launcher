                            { id: 2, title: 'Achieve 4.5 star rating', initiatives: [{ id: 1, title: 'Optimize user experience', activities: ['Perform usability testing', 'Execute A/B testing', 'Refine feature sets', 'Create support documentation'] }] }
                        ]
                    },
                    {
                        id: 3, title: 'Accelerate time to market',
                        okrs: [{
                            id: 1, title: 'Reduce development cycle to 6 weeks',
                            initiatives: [
                                { id: 1, title: 'Drive agile transformation', activities: ['Adopt Scrum methodology', 'Conduct sprint planning', 'Hold daily standups', 'Facilitate retrospectives'] },
                                { id: 2, title: 'Build DevOps pipeline', activities: ['Configure CI/CD tools', 'Implement infrastructure as code', 'Automate deployment process', 'Set up monitoring and alerts'] }
                            ]
                        }]
                    }
                ]
            }
        };

        function App() {
            const [title, setTitle] = useState(examples.blank.title);
            const [subtitle, setSubtitle] = useState(examples.blank.subtitle);
            const [mission, setMission] = useState(examples.blank.mission);
            const [pillars, setPillars] = useState(examples.blank.pillars);
            const [editDialog, setEditDialog] = useState({ open: false, type: '', value: '', path: null });
            const [examplesDialog, setExamplesDialog] = useState(false);
            const [exportDialog, setExportDialog] = useState(false);
            const [editMode, setEditMode] = useState(true);

            const loadExample = (exampleKey) => {
                const example = examples[exampleKey];
                setTitle(example.title);
                setSubtitle(example.subtitle);
                setMission(example.mission);
                setPillars(example.pillars);
                setExamplesDialog(false);
            };

            const exportAsHTML = () => {
                setExportDialog(false);
                setTimeout(() => {
                    const content = document.getElementById('root').cloneNode(true);
                    const buttons = content.querySelectorAll('button');
                    buttons.forEach(btn => btn.remove());
                    
                    const html = `<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>${title}</title>
    <style>
        body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif; background: #F7F8FA; margin: 0; }
    </style>
</head>
<body>
    ${content.innerHTML}
</body>
</html>`;
                    
                    const blob = new Blob([html], { type: 'text/html' });
                    const url = URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = 'strategy-execution.html';
                    a.click();
                }, 100);
            };

            const exportAsMarkdown = () => {
                setExportDialog(false);
                setTimeout(() => {
                    let md = `# ${title}\n\n${subtitle}\n\n`;
                    md += `## Mission Statement\n\n${mission}\n\n`;
                    md += `## Strategic Framework\n\n`;
                    
                    pillars.forEach((pillar, pIdx) => {
                        md += `### ${pIdx + 1}. ${pillar.title}\n\n`;
                        pillar.okrs.forEach((okr, oIdx) => {
                            md += `#### OKR ${oIdx + 1}: ${okr.title}\n\n`;
                            okr.initiatives.forEach((initiative, iIdx) => {
                                md += `**Initiative ${iIdx + 1}:** ${initiative.title}\n\n`;
                                md += `Activities:\n`;
                                initiative.activities.forEach((activity) => {
                                    md += `- ${activity}\n`;
                                });
                                md += `\n`;
                            });
                        });
                    });
                    
                    const blob = new Blob([md], { type: 'text/markdown' });
                    const url = URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = 'strategy-execution.md';
                    a.click();
                }, 100);
            };

            const exportAsCSV = () => {
                setExportDialog(false);
                setTimeout(() => {
                    let csv = 'Pillar,OKR,Initiative,Activity\n';
                    
                    pillars.forEach(pillar => {
                        pillar.okrs.forEach(okr => {
                            okr.initiatives.forEach(initiative => {
                                initiative.activities.forEach(activity => {
                                    csv += `"${pillar.title}","${okr.title}","${initiative.title}","${activity}"\n`;
                                });
                            });
                        });
                    });
                    
                    const blob = new Blob([csv], { type: 'text/csv' });
                    const url = URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = 'strategy-execution.csv';
                    a.click();
                }, 100);
            };

            const exportAsPDF = () => {
                setExportDialog(false);
                setTimeout(async () => {
                    const element = document.getElementById('root');
                    const canvas = await html2canvas(element, { 
                        scale: 2,
                        backgroundColor: '#F7F8FA',
                        logging: false
                    });
                    
                    const imgData = canvas.toDataURL('image/png');
                    const pdf = new jspdf.jsPDF('p', 'mm', 'a4');
                    const pdfWidth = pdf.internal.pageSize.getWidth();
                    const pdfHeight = pdf.internal.pageSize.getHeight();
                    const imgWidth = canvas.width;
                    const imgHeight = canvas.height;
                    const ratio = Math.min(pdfWidth / imgWidth, pdfHeight / imgHeight);
                    const imgX = (pdfWidth - imgWidth * ratio) / 2;
                    const imgY = 0;
                    
                    pdf.addImage(imgData, 'PNG', imgX, imgY, imgWidth * ratio, imgHeight * ratio);
                    pdf.save('strategy-execution.pdf');
                }, 300);
            };

            const exportAsPNG = () => {
                setExportDialog(false);
                setTimeout(async () => {
                    const element = document.getElementById('root');
                    const canvas = await html2canvas(element, { 
                        scale: 2,
                        backgroundColor: '#F7F8FA',
                        logging: false
                    });
                    
                    canvas.toBlob(blob => {
                        const url = URL.createObjectURL(blob);
                        const a = document.createElement('a');
                        a.href = url;
                        a.download = 'strategy-execution.png';
                        a.click();
                    });
                }, 300);
            };

            const addPillar = () => setPillars([...pillars, { id: Date.now(), title: 'Strategic pillars', okrs: [] }]);
            const addOKR = (pillarId) => setPillars(pillars.map(p => p.id === pillarId ? { ...p, okrs: [...p.okrs, { id: Date.now(), title: 'Define objectives', initiatives: [] }] } : p));
            const addInitiative = (pillarId, okrId) => setPillars(pillars.map(p => p.id === pillarId ? { ...p, okrs: p.okrs.map(o => o.id === okrId ? { ...o, initiatives: [...o.initiatives, { id: Date.now(), title: 'Launch initiatives', activities: [] }] } : o) } : p));
            const addActivity = (pillarId, okrId, initiativeId) => setPillars(pillars.map(p => p.id === pillarId ? { ...p, okrs: p.okrs.map(o => o.id === okrId ? { ...o, initiatives: o.initiatives.map(i => i.id === initiativeId ? { ...i, activities: [...i.activities, 'Execute activities'] } : i) } : o) } : p));
            const deletePillar = (pillarId) => setPillars(pillars.filter(p => p.id !== pillarId));
            const deleteOKR = (pillarId, okrId) => setPillars(pillars.map(p => p.id === pillarId ? { ...p, okrs: p.okrs.filter(o => o.id !== okrId) } : p));
            const deleteInitiative = (pillarId, okrId, initiativeId) => setPillars(pillars.map(p => p.id === pillarId ? { ...p, okrs: p.okrs.map(o => o.id === okrId ? { ...o, initiatives: o.initiatives.filter(i => i.id !== initiativeId) } : o) } : p));
            const deleteActivity = (pillarId, okrId, initiativeId, activityIdx) => setPillars(pillars.map(p => p.id === pillarId ? { ...p, okrs: p.okrs.map(o => o.id === okrId ? { ...o, initiatives: o.initiatives.map(i => i.id === initiativeId ? { ...i, activities: i.activities.filter((a, idx) => idx !== activityIdx) } : i) } : o) } : p));

            const updateItem = (value) => {
                const { type, path } = editDialog;
                if (type === 'title') setTitle(value);
                else if (type === 'subtitle') setSubtitle(value);
                else if (type === 'mission') setMission(value);
                else if (type === 'pillar') setPillars(pillars.map(p => p.id === path.pillarId ? { ...p, title: value } : p));
                else if (type === 'okr') setPillars(pillars.map(p => p.id === path.pillarId ? { ...p, okrs: p.okrs.map(o => o.id === path.okrId ? { ...o, title: value } : o) } : p));
                else if (type === 'initiative') setPillars(pillars.map(p => p.id === path.pillarId ? { ...p, okrs: p.okrs.map(o => o.id === path.okrId ? { ...o, initiatives: o.initiatives.map(i => i.id === path.initiativeId ? { ...i, title: value } : i) } : o) } : p));
                else if (type === 'activity') setPillars(pillars.map(p => p.id === path.pillarId ? { ...p, okrs: p.okrs.map(o => o.id === path.okrId ? { ...o, initiatives: o.initiatives.map(i => i.id === path.initiativeId ? { ...i, activities: i.activities.map((a, idx) => idx === path.activityIdx ? value : a) } : i) } : o) } : p));
                setEditDialog({ open: false, type: '', value: '', path: null });
            };

            const getTotalCount = (type) => {
                if (type === 'pillars') return pillars.length;
                if (type === 'okrs') return pillars.reduce((acc, p) => acc + p.okrs.length, 0);
                if (type === 'initiatives') return pillars.reduce((acc, p) => acc + p.okrs.reduce((a, o) => a + o.initiatives.length, 0), 0);
                if (type === 'activities') return pillars.reduce((acc, p) => acc + p.okrs.reduce((a, o) => a + o.initiatives.reduce((i, init) => i + init.activities.length, 0), 0), 0);
                return 0;
            };

            const EditIcon = () => (<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>);
            const TrashIcon = () => (<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/></svg>);
            const PlusIcon = () => (<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>);
            const XIcon = () => (<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>);
            const BookIcon = () => (<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/></svg>);
            const SettingsIcon = () => (<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2"><circle cx="12" cy="12" r="3"/><path d="M12 1v6m0 6v6m5.2-14.2l-4.2 4.2m-2 2l-4.2 4.2M23 12h-6m-6 0H5m14.2 5.2l-4.2-4.2m-2-2l-4.2-4.2"/></svg>);
            const TrendingIcon = () => (<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2"><polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/><polyline points="17 6 23 6 23 12"/></svg>);
            const DownloadIcon = () => (<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>);

            return (
                <div style={{ minHeight: '100vh', backgroundColor: '#F7F8FA' }}>
                    <div style={{ backgroundColor: colors.white, borderBottom: `1px solid ${colors.grey200}` }}>
                        <div style={{ maxWidth: '1280px', margin: '0 auto', padding: '24px 32px' }}>
                            <div style={{ display: 'flex', alignItems: 'center', justifyContent: 'space-between' }}>
                                <div>
                                    <div style={{ display: 'flex', alignItems: 'center', gap: '12px' }}>
                                        <h1 style={{ fontSize: '30px', fontWeight: 'bold', color: colors.black }}>{title}</h1>
                                        {editMode && (<button className="button" style={{ background: 'transparent', padding: '8px', borderRadius: '8px', color: colors.grey500 }} onClick={() => setEditDialog({ open: true, type: 'title', value: title, path: null })}><EditIcon /></button>)}
                                    </div>
                                    <div style={{ display: 'flex', alignItems: 'center', gap: '12px', marginTop: '4px' }}>
                                        <p style={{ fontSize: '14px', color: colors.grey500 }}>{subtitle}</p>
                                        {editMode && (<button className="button" style={{ background: 'transparent', padding: '4px', borderRadius: '8px', color: colors.grey400 }} onClick={() => setEditDialog({ open: true, type: 'subtitle', value: subtitle, path: null })}><EditIcon /></button>)}
                                    </div>
                                </div>
                                <div style={{ display: 'flex', gap: '12px' }}>
                                    <button className="button" style={{ backgroundColor: editMode ? colors.orange500 : colors.white, color: editMode ? colors.white : colors.grey500, border: `2px solid ${editMode ? colors.orange500 : colors.grey300}`, padding: '12px 24px', borderRadius: '8px', display: 'flex', alignItems: 'center', gap: '8px' }} onClick={() => setEditMode(!editMode)}><SettingsIcon /> {editMode ? 'Edit Mode On' : 'Edit Mode Off'}</button>
                                    <button className="button" style={{ backgroundColor: colors.orange500, color: colors.white, padding: '12px 24px', borderRadius: '8px', display: 'flex', alignItems: 'center', gap: '8px' }} onClick={() => setExamplesDialog(true)}><BookIcon /> Load Example</button>
                                    <div className="tooltip-container">
                                        {editMode && <div className="tooltip">Turn off Edit Mode to export</div>}
                                        <button className="button" style={{ backgroundColor: editMode ? colors.grey300 : colors.orange500, color: editMode ? colors.grey500 : colors.white, padding: '12px 24px', borderRadius: '8px', display: 'flex', alignItems: 'center', gap: '8px', cursor: editMode ? 'not-allowed' : 'pointer' }} onClick={() => !editMode && setExportDialog(true)} disabled={editMode}><DownloadIcon /> Export</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div style={{ backgroundColor: colors.white, borderBottom: `1px solid ${colors.grey200}` }}>
                        <div style={{ maxWidth: '1280px', margin: '0 auto', padding: '24px 32px' }}>
                            <div style={{ display: 'grid', gridTemplateColumns: 'repeat(4, 1fr)', gap: '32px' }}>
                                <div><div style={{ fontSize: '11px', fontWeight: '600', marginBottom: '8px', color: colors.grey500, textTransform: 'uppercase', letterSpacing: '0.5px' }}>Strategic Pillars</div><div style={{ display: 'flex', alignItems: 'baseline', gap: '8px' }}><div style={{ fontSize: '36px', fontWeight: 'bold', color: colors.black }}>{getTotalCount('pillars')}</div><TrendingIcon /></div></div>
                                <div><div style={{ fontSize: '11px', fontWeight: '600', marginBottom: '8px', color: colors.grey500, textTransform: 'uppercase', letterSpacing: '0.5px' }}>Total OKRs</div><div style={{ fontSize: '36px', fontWeight: 'bold', color: colors.orange500 }}>{getTotalCount('okrs')}</div></div>
                                <div><div style={{ fontSize: '11px', fontWeight: '600', marginBottom: '8px', color: colors.grey500, textTransform: 'uppercase', letterSpacing: '0.5px' }}>Initiatives</div><div style={{ fontSize: '36px', fontWeight: 'bold', color: colors.orange400 }}>{getTotalCount('initiatives')}</div></div>
                                <div><div style={{ fontSize: '11px', fontWeight: '600', marginBottom: '8px', color: colors.grey500, textTransform: 'uppercase', letterSpacing: '0.5px' }}>Activities</div><div style={{ fontSize: '36px', fontWeight: 'bold', color: colors.orange300 }}>{getTotalCount('activities')}</div></div>
                            </div>
                        </div>
                    </div>

                    <div style={{ maxWidth: '1280px', margin: '0 auto', padding: '32px' }}>
                        <div style={{ marginBottom: '32px', padding: '24px', borderRadius: '12px', border: `1px solid ${colors.grey200}`, backgroundColor: colors.white }}>
                            <div style={{ display: 'flex', alignItems: 'center', justifyContent: 'space-between' }}>
                                <div style={{ flex: 1 }}><div style={{ fontSize: '11px', fontWeight: '600', marginBottom: '8px', color: colors.orange500, textTransform: 'uppercase', letterSpacing: '0.5px' }}>Mission Statement</div><h2 style={{ fontSize: '24px', fontWeight: '600', color: colors.black }}>{mission}</h2></div>
                                {editMode && (<button className="button" style={{ background: 'transparent', padding: '10px', borderRadius: '8px', color: colors.grey500 }} onClick={() => setEditDialog({ open: true, type: 'mission', value: mission, path: null })}><EditIcon /></button>)}
                            </div>
                        </div>

                        <div style={{ display: 'grid', gridTemplateColumns: 'repeat(auto-fit, minmax(350px, 1fr))', gap: '24px', marginBottom: '32px' }}>
                            {pillars.map((pillar, pillarIndex) => (
                                <div key={pillar.id} className="card" style={{ border: `1px solid ${colors.grey200}` }}>
                                    <div style={{ height: '4px', backgroundColor: pillarIndex === 0 ? colors.orange500 : pillarIndex === 1 ? colors.orange400 : colors.orange300 }} />
                                    <div style={{ padding: '20px' }}>
                                        <div style={{ display: 'flex', alignItems: 'start', justifyContent: 'space-between', marginBottom: '16px' }}>
                                            <div style={{ flex: 1 }}><div style={{ fontSize: '11px', fontWeight: '600', marginBottom: '8px', color: colors.grey500, textTransform: 'uppercase', letterSpacing: '0.5px' }}>Pillar {pillarIndex + 1}</div><h3 style={{ fontSize: '18px', fontWeight: '600', color: colors.black }}>{pillar.title}</h3></div>
                                            {editMode && (<div style={{ display: 'flex', gap: '4px' }}><button className="button" style={{ background: 'transparent', padding: '8px', borderRadius: '8px', color: colors.grey400 }} onClick={() => setEditDialog({ open: true, type: 'pillar', value: pillar.title, path: { pillarId: pillar.id } })}><EditIcon /></button><button className="button" style={{ background: 'transparent', padding: '8px', borderRadius: '8px', color: colors.orange500 }} onClick={() => deletePillar(pillar.id)}><TrashIcon /></button></div>)}
                                        </div>
                                        {pillar.okrs.map(okr => (
                                            <div key={okr.id} style={{ marginBottom: '16px', padding: '16px', borderRadius: '8px', backgroundColor: colors.orange100, border: `1px solid ${colors.orange200}` }}>
                                                <div style={{ display: 'flex', justifyContent: 'space-between', marginBottom: '12px' }}>
                                                    <div style={{ flex: 1 }}><div style={{ fontSize: '11px', fontWeight: '600', color: colors.orange500, textTransform: 'uppercase', marginBottom: '4px' }}>OKR</div><div style={{ fontSize: '14px', fontWeight: '600', color: colors.black }}>{okr.title}</div></div>
                                                    {editMode && (<div style={{ display: 'flex', gap: '4px', marginLeft: '8px' }}><button className="button" style={{ background: 'transparent', padding: '6px', borderRadius: '8px', color: colors.orange400 }} onClick={() => setEditDialog({ open: true, type: 'okr', value: okr.title, path: { pillarId: pillar.id, okrId: okr.id } })}><EditIcon /></button><button className="button" style={{ background: 'transparent', padding: '6px', borderRadius: '8px', color: colors.orange500 }} onClick={() => deleteOKR(pillar.id, okr.id)}><TrashIcon /></button></div>)}
                                                </div>
                                                {okr.initiatives.map(initiative => (
                                                    <div key={initiative.id} style={{ marginBottom: '12px', padding: '12px', borderRadius: '8px', backgroundColor: colors.orange200, border: `1px solid ${colors.orange300}` }}>
                                                        <div style={{ display: 'flex', justifyContent: 'space-between', marginBottom: '8px' }}>
                                                            <div style={{ flex: 1 }}><div style={{ fontSize: '11px', fontWeight: '600', color: colors.orange500, textTransform: 'uppercase', marginBottom: '4px' }}>Initiative</div><div style={{ fontSize: '13px', fontWeight: '600', color: colors.black }}>{initiative.title}</div></div>
                                                            {editMode && (<div style={{ display: 'flex', gap: '4px', marginLeft: '8px' }}><button className="button" style={{ background: 'transparent', padding: '6px', borderRadius: '8px', color: colors.orange400 }} onClick={() => setEditDialog({ open: true, type: 'initiative', value: initiative.title, path: { pillarId: pillar.id, okrId: okr.id, initiativeId: initiative.id } })}><EditIcon /></button><button className="button" style={{ background: 'transparent', padding: '6px', borderRadius: '8px', color: colors.orange500 }} onClick={() => deleteInitiative(pillar.id, okr.id, initiative.id)}><TrashIcon /></button></div>)}
                                                        </div>
                                                        {initiative.activities.map((activity, idx) => (
                                                            <div key={idx} style={{ display: 'flex', justifyContent: 'space-between', alignItems: 'center', padding: '8px 12px', marginBottom: '8px', borderRadius: '8px', backgroundColor: colors.orange400, color: colors.white, fontSize: '12px', fontWeight: '500' }}>
                                                                <span>{activity}</span>
                                                                {editMode && (<div style={{ display: 'flex', gap: '4px' }}><button className="button" style={{ background: 'transparent', padding: '6px', borderRadius: '8px', color: colors.white }} onClick={() => setEditDialog({ open: true, type: 'activity', value: activity, path: { pillarId: pillar.id, okrId: okr.id, initiativeId: initiative.id, activityIdx: idx } })}><EditIcon /></button><button className="button" style={{ background: 'transparent', padding: '6px', borderRadius: '8px', color: colors.white }} onClick={() => deleteActivity(pillar.id, okr.id, initiative.id, idx)}><TrashIcon /></button></div>)}
                                                            </div>
                                                        ))}
                                                        {editMode && (<button className="button" style={{ width: '100%', marginTop: '8px', padding: '8px', background: 'transparent', borderRadius: '8px', color: colors.orange500, fontSize: '12px', fontWeight: '600', display: 'flex', alignItems: 'center', justifyContent: 'center', gap: '4px' }} onClick={() => addActivity(pillar.id, okr.id, initiative.id)}><PlusIcon /> Add Activity</button>)}
                                                    </div>
                                                ))}
                                                {editMode && (<button className="button" style={{ width: '100%', padding: '8px', background: 'transparent', borderRadius: '8px', color: colors.orange500, fontSize: '12px', fontWeight: '600', display: 'flex', alignItems: 'center', justifyContent: 'center', gap: '4px' }} onClick={() => addInitiative(pillar.id, okr.id)}><PlusIcon /> Add Initiative</button>)}
                                            </div>
                                        ))}
                                        {editMode && (<button className="button" style={{ width: '100%', padding: '8px', backgroundColor: colors.orange100, border: `1px solid ${colors.orange200}`, borderRadius: '8px', color: colors.orange500, fontSize: '14px', fontWeight: '600', display: 'flex', alignItems: 'center', justifyContent: 'center', gap: '4px' }} onClick={() => addOKR(pillar.id)}><PlusIcon /> Add OKR</button>)}
                                    </div>
                                </div>
                            ))}
                        </div>
                        {editMode && (<div style={{ display: 'flex', justifyContent: 'center' }}><button className="button" style={{ backgroundColor: colors.orange500, color: colors.white, padding: '12px 32px', borderRadius: '8px', fontSize: '16px', fontWeight: '600', display: 'flex', alignItems: 'center', gap: '8px' }} onClick={addPillar}><PlusIcon /> Add Strategic Pillar</button></div>)}
                    </div>

                    {editDialog.open && (
                        <div className="modal-overlay" onClick={() => setEditDialog({ open: false, type: '', value: '', path: null })}>
                            <div className="modal-content" style={{ width: '500px', border: `1px solid ${colors.grey200}` }} onClick={(e) => e.stopPropagation()}>
                                <div style={{ display: 'flex', alignItems: 'center', justifyContent: 'space-between', marginBottom: '24px' }}><h2 style={{ fontSize: '20px', fontWeight: '600', color: colors.black }}>Edit {editDialog.type}</h2><button className="button" style={{ background: 'transparent', padding: '8px', borderRadius: '8px', color: colors.grey500 }} onClick={() => setEditDialog({ open: false, type: '', value: '', path: null })}><XIcon /></button></div>
                                <input className="input" value={editDialog.value} onChange={(e) => setEditDialog({ ...editDialog, value: e.target.value })} placeholder={`Enter ${editDialog.type} name`} autoFocus style={{ marginBottom: '24px' }} />
                                <div style={{ display: 'flex', gap: '12px', justifyContent: 'flex-end' }}><button className="button" style={{ border: `2px solid ${colors.grey300}`, backgroundColor: colors.white, color: colors.grey500, padding: '10px 16px', borderRadius: '8px', fontWeight: '600' }} onClick={() => setEditDialog({ open: false, type: '', value: '', path: null })}>Cancel</button><button className="button" style={{ backgroundColor: colors.orange500, color: colors.white, padding: '10px 16px', borderRadius: '8px', fontWeight: '600' }} onClick={() => updateItem(editDialog.value)}>Save Changes</button></div>
                            </div>
                        </div>
                    )}

                    {examplesDialog && (
                        <div className="modal-overlay" onClick={() => setExamplesDialog(false)}>
                            <div className="modal-content" style={{ width: '900px', border: `1px solid ${colors.grey200}` }} onClick={(e) => e.stopPropagation()}>
                                <div style={{ display: 'flex', alignItems: 'center', justifyContent: 'space-between', marginBottom: '32px' }}><h2 style={{ fontSize: '24px', fontWeight: '600', color: colors.black }}>Load Example Strategy</h2><button className="button" style={{ background: 'transparent', padding: '8px', borderRadius: '8px', color: colors.grey500 }} onClick={() => setExamplesDialog(false)}><XIcon /></button></div>
                                <div style={{ display: 'grid', gridTemplateColumns: 'repeat(2, 1fr)', gap: '16px' }}>
                                    {[                                        { key: 'digitalTransformation', title: 'Digital Transformation', color: colors.orange500, desc: 'Drive digital transformation with focus on customer experience, operational excellence, and innovation culture.' },                                        { key: 'salesGrowth', title: 'Sales Growth', color: colors.orange400, desc: 'Accelerate revenue growth through market expansion, sales excellence, and customer success initiatives.' },                                        { key: 'sustainability', title: 'Sustainability', color: colors.orange300, desc: 'Build a sustainable business with focus on environmental impact, social responsibility, and governance.' },                                        { key: 'productDevelopment', title: 'Product Development', color: colors.orange400, desc: 'Deliver innovative products through improved innovation pipeline, product quality, and faster time to market.' }                                    ].map(ex => (
                                        <div key={ex.key} className="card" style={{ cursor: 'pointer', border: `2px solid ${colors.orange200}` }} onClick={() => loadExample(ex.key)}><div style={{ height: '4px', backgroundColor: ex.color }} /><div style={{ padding: '20px' }}><h3 style={{ fontSize: '18px', fontWeight: '600', color: colors.orange500, marginBottom: '8px' }}>{ex.title}</h3><p style={{ fontSize: '14px', lineHeight: '1.6', color: colors.grey500 }}>{ex.desc}</p></div></div>
                                    ))}
                                    <div className="card" style={{ cursor: 'pointer', border: `2px solid ${colors.grey300}`, gridColumn: 'span 2' }} onClick={() => loadExample('blank')}><div style={{ height: '4px', backgroundColor: colors.grey400 }} /><div style={{ padding: '20px' }}><h3 style={{ fontSize: '18px', fontWeight: '600', color: colors.grey500, marginBottom: '8px' }}>Blank Template</h3><p style={{ fontSize: '14px', lineHeight: '1.6', color: colors.grey500 }}>Start with a clean slate and build your own custom strategy framework from scratch.</p></div></div>
                                </div>
                            </div>
                        </div>
                    )}

                    {exportDialog && (
                        <div className="modal-overlay" onClick={() => setExportDialog(false)}>
                            <div className="modal-content" style={{ width: '600px', border: `1px solid ${colors.grey200}` }} onClick={(e) => e.stopPropagation()}>
                                <div style={{ display: 'flex', alignItems: 'center', justifyContent: 'space-between', marginBottom: '32px' }}><h2 style={{ fontSize: '24px', fontWeight: '600', color: colors.black }}>Export Strategy</h2><button className="button" style={{ background: 'transparent', padding: '8px', borderRadius: '8px', color: colors.grey500 }} onClick={() => setExportDialog(false)}><XIcon /></button></div>
                                <div style={{ display: 'grid', gridTemplateColumns: 'repeat(2, 1fr)', gap: '16px' }}>
                                    {[                                        { format: 'PDF', icon: 'ðŸ“„', action: exportAsPDF, desc: 'High-quality PDF document' },                                        { format: 'PNG', icon: 'ðŸ–¼ï¸', action: exportAsPNG, desc: 'Image file for presentations' },                                        { format: 'HTML', icon: 'ðŸŒ', action: exportAsHTML, desc: 'Standalone web page' },                                        { format: 'Markdown', icon: 'ðŸ“', action: exportAsMarkdown, desc: 'Plain text with formatting' },                                        { format: 'CSV', icon: 'ðŸ“Š', action: exportAsCSV, desc: 'Spreadsheet-compatible format', span: true }                                    ].map((exp, idx) => (
                                        <button key={idx} className="button card" style={{ padding: '24px', border: `2px solid ${colors.orange200}`, textAlign: 'left', cursor: 'pointer', gridColumn: exp.span ? 'span 2' : 'auto' }} onClick={exp.action}>
                                            <div style={{ fontSize: '32px', marginBottom: '8px' }}>{exp.icon}</div>
                                            <h3 style={{ fontSize: '18px', fontWeight: '600', color: colors.orange500, marginBottom: '4px' }}>Export as {exp.format}</h3>
                                            <p style={{ fontSize: '14px', color: colors.grey500 }}>{exp.desc}</p>
                                        </button>
                                    ))}
                                </div>
                            </div>
                        </div>
                    )}
                </div>
            );
        }

        ReactDOM.render(<App />, document.getElementById('root'));
    </script>
</body>
</html>
