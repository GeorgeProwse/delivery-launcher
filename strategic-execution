                        >
                            <XIcon />
                        </button>
                    </div>

                    <div style={{ display: 'grid', gridTemplateColumns: 'repeat(2, 1fr)', gap: '16px' }}>
                        {exampleList.map((ex) => (
                            <div
                                key={ex.key}
                                className="card"
                                style={{ cursor: 'pointer', border: `2px solid ${colors.orange200}` }}
                                onClick={() => onLoad(ex.key)}
                                role="button"
                                tabIndex={0}
                                onKeyDown={(e) => e.key === 'Enter' && onLoad(ex.key)}
                                aria-label={`Load ${ex.title} example`}
                            >
                                <div style={{ height: '4px', backgroundColor: ex.color }} />
                                <div style={{ padding: '20px' }}>
                                    <h3 style={{ fontSize: '18px', fontWeight: '600', color: colors.orange500, marginBottom: '8px' }}>
                                        {ex.title}
                                    </h3>
                                    <p style={{ fontSize: '14px', lineHeight: '1.6', color: colors.grey500 }}>
                                        {ex.desc}
                                    </p>
                                </div>
                            </div>
                        ))}

                        <div
                            className="card"
                            style={{ cursor: 'pointer', border: `2px solid ${colors.grey300}`, gridColumn: 'span 2' }}
                            onClick={() => onLoad('blank')}
                            role="button"
                            tabIndex={0}
                            onKeyDown={(e) => e.key === 'Enter' && onLoad('blank')}
                            aria-label="Load blank template"
                        >
                            <div style={{ height: '4px', backgroundColor: colors.grey400 }} />
                            <div style={{ padding: '20px' }}>
                                <h3 style={{ fontSize: '18px', fontWeight: '600', color: colors.grey500, marginBottom: '8px' }}>
                                    Blank Template
                                </h3>
                                <p style={{ fontSize: '14px', lineHeight: '1.6', color: colors.grey500 }}>
                                    Start with a clean slate and build your own custom strategy framework from scratch.
                                </p>
                            </div>
                        </div>
                    </div>
                </Modal>
            );
        }

        // --- Export format picker dialog ---
        function ExportModal({ onClose, onExport }) {
            const formats = [
                { format: 'PDF', icon: 'üìÑ', key: 'pdf', desc: 'High-quality PDF document' },
                { format: 'PNG', icon: 'üñºÔ∏è', key: 'png', desc: 'Image file for presentations' },
                { format: 'HTML', icon: 'üåê', key: 'html', desc: 'Standalone web page' },
                { format: 'Markdown', icon: 'üìù', key: 'markdown', desc: 'Plain text with formatting' },
                { format: 'CSV', icon: 'üìä', key: 'csv', desc: 'Spreadsheet-compatible format', span: true },
            ];

            return (
                <Modal onClose={onClose} width="600px">
                    <div style={{ display: 'flex', alignItems: 'center', justifyContent: 'space-between', marginBottom: '32px' }}>
                        <h2 style={{ fontSize: '24px', fontWeight: '600', color: colors.black }}>
                            Export Strategy
                        </h2>
                        <button
                            className="button"
                            style={{ background: 'transparent', padding: '8px', borderRadius: '8px', color: colors.grey500 }}
                            onClick={onClose}
                            aria-label="Close dialog"
                        >
                            <XIcon />
                        </button>
                    </div>

                    <div style={{ display: 'grid', gridTemplateColumns: 'repeat(2, 1fr)', gap: '16px' }}>
                        {formats.map((exp) => (
                            <button
                                key={exp.key}
                                className="button card"
                                style={{
                                    padding: '24px',
                                    border: `2px solid ${colors.orange200}`,
                                    textAlign: 'left',
                                    cursor: 'pointer',
                                    gridColumn: exp.span ? 'span 2' : 'auto',
                                }}
                                onClick={() => onExport(exp.key)}
                                aria-label={`Export as ${exp.format}`}
                            >
                                <div style={{ fontSize: '32px', marginBottom: '8px' }}>{exp.icon}</div>
                                <h3 style={{ fontSize: '18px', fontWeight: '600', color: colors.orange500, marginBottom: '4px' }}>
                                    Export as {exp.format}
                                </h3>
                                <p style={{ fontSize: '14px', color: colors.grey500 }}>{exp.desc}</p>
                            </button>
                        ))}
                    </div>
                </Modal>
            );
        }

        // --- Activity row ---
        function ActivityItem({ activity, editMode, onEdit, onDelete }) {
            return (
                <div style={{
                    display: 'flex',
                    justifyContent: 'space-between',
                    alignItems: 'center',
                    padding: '8px 12px',
                    marginBottom: '8px',
                    borderRadius: '8px',
                    backgroundColor: colors.orange400,
                    color: colors.white,
                    fontSize: '12px',
                    fontWeight: '500',
                }}>
                    <span>{activity}</span>
                    {editMode && (
                        <div style={{ display: 'flex', gap: '4px' }}>
                            <button
                                className="button"
                                style={{ background: 'transparent', padding: '6px', borderRadius: '8px', color: colors.white }}
                                onClick={onEdit}
                                aria-label={`Edit activity: ${activity}`}
                            >
                                <EditIcon />
                            </button>
                            <button
                                className="button"
                                style={{ background: 'transparent', padding: '6px', borderRadius: '8px', color: colors.white }}
                                onClick={onDelete}
                                aria-label={`Delete activity: ${activity}`}
                            >
                                <TrashIcon />
                            </button>
                        </div>
                    )}
                </div>
            );
        }

        // --- Initiative block ---
        function InitiativeBlock({ initiative, editMode, onEdit, onDelete, onAddActivity, onEditActivity, onDeleteActivity }) {
            return (
                <div style={{
                    marginBottom: '12px',
                    padding: '12px',
                    borderRadius: '8px',
                    backgroundColor: colors.orange200,
                    border: `1px solid ${colors.orange300}`,
                }}>
                    <div style={{ display: 'flex', justifyContent: 'space-between', marginBottom: '8px' }}>
                        <div style={{ flex: 1 }}>
                            <div style={{ fontSize: '11px', fontWeight: '600', color: colors.orange500, textTransform: 'uppercase', marginBottom: '4px' }}>
                                Initiative
                            </div>
                            <div style={{ fontSize: '13px', fontWeight: '600', color: colors.black }}>
                                {initiative.title}
                            </div>
                        </div>
                        {editMode && (
                            <div style={{ display: 'flex', gap: '4px', marginLeft: '8px' }}>
                                <button
                                    className="button"
                                    style={{ background: 'transparent', padding: '6px', borderRadius: '8px', color: colors.orange400 }}
                                    onClick={onEdit}
                                    aria-label={`Edit initiative: ${initiative.title}`}
                                >
                                    <EditIcon />
                                </button>
                                <button
                                    className="button"
                                    style={{ background: 'transparent', padding: '6px', borderRadius: '8px', color: colors.orange500 }}
                                    onClick={onDelete}
                                    aria-label={`Delete initiative: ${initiative.title}`}
                                >
                                    <TrashIcon />
                                </button>
                            </div>
                        )}
                    </div>

                    {initiative.activities.map((activity, idx) => (
                        <ActivityItem
                            key={idx}
                            activity={activity}
                            editMode={editMode}
                            onEdit={() => onEditActivity(idx)}
                            onDelete={() => onDeleteActivity(idx)}
                        />
                    ))}

                    {editMode && (
                        <button
                            className="button"
                            style={{
                                width: '100%',
                                marginTop: '8px',
                                padding: '8px',
                                background: 'transparent',
                                borderRadius: '8px',
                                color: colors.orange500,
                                fontSize: '12px',
                                fontWeight: '600',
                                display: 'flex',
                                alignItems: 'center',
                                justifyContent: 'center',
                                gap: '4px',
                            }}
                            onClick={onAddActivity}
                            aria-label="Add activity"
                        >
                            <PlusIcon /> Add Activity
                        </button>
                    )}
                </div>
            );
        }

        // --- OKR block ---
        function OKRBlock({ okr, pillarId, editMode, onEdit, onDelete, onAddInitiative, onEditInitiative, onDeleteInitiative, onAddActivity, onEditActivity, onDeleteActivity }) {
            return (
                <div style={{
                    marginBottom: '16px',
                    padding: '16px',
                    borderRadius: '8px',
                    backgroundColor: colors.orange100,
                    border: `1px solid ${colors.orange200}`,
                }}>
                    <div style={{ display: 'flex', justifyContent: 'space-between', marginBottom: '12px' }}>
                        <div style={{ flex: 1 }}>
                            <div style={{ fontSize: '11px', fontWeight: '600', color: colors.orange500, textTransform: 'uppercase', marginBottom: '4px' }}>
                                OKR
                            </div>
                            <div style={{ fontSize: '14px', fontWeight: '600', color: colors.black }}>
                                {okr.title}
                            </div>
                        </div>
                        {editMode && (
                            <div style={{ display: 'flex', gap: '4px', marginLeft: '8px' }}>
                                <button
                                    className="button"
                                    style={{ background: 'transparent', padding: '6px', borderRadius: '8px', color: colors.orange400 }}
                                    onClick={onEdit}
                                    aria-label={`Edit OKR: ${okr.title}`}
                                >
                                    <EditIcon />
                                </button>
                                <button
                                    className="button"
                                    style={{ background: 'transparent', padding: '6px', borderRadius: '8px', color: colors.orange500 }}
                                    onClick={onDelete}
                                    aria-label={`Delete OKR: ${okr.title}`}
                                >
                                    <TrashIcon />
                                </button>
                            </div>
                        )}
                    </div>

                    {okr.initiatives.map((initiative) => (
                        <InitiativeBlock
                            key={initiative.id}
                            initiative={initiative}
                            pillarId={pillarId}
                            okrId={okr.id}
                            editMode={editMode}
                            onEdit={() => onEditInitiative(initiative.id)}
                            onDelete={() => onDeleteInitiative(initiative.id)}
                            onAddActivity={() => onAddActivity(initiative.id)}
                            onEditActivity={(idx) => onEditActivity(initiative.id, idx)}
                            onDeleteActivity={(idx) => onDeleteActivity(initiative.id, idx)}
                        />
                    ))}

                    {editMode && (
                        <button
                            className="button"
                            style={{
                                width: '100%',
                                padding: '8px',
                                background: 'transparent',
                                borderRadius: '8px',
                                color: colors.orange500,
                                fontSize: '12px',
                                fontWeight: '600',
                                display: 'flex',
                                alignItems: 'center',
                                justifyContent: 'center',
                                gap: '4px',
                            }}
                            onClick={onAddInitiative}
                            aria-label="Add initiative"
                        >
                            <PlusIcon /> Add Initiative
                        </button>
                    )}
                </div>
            );
        }

        // --- Pillar card ---
        function PillarCard({ pillar, pillarIndex, editMode, onEdit, onDelete, onAddOKR, onEditOKR, onDeleteOKR, onAddInitiative, onEditInitiative, onDeleteInitiative, onAddActivity, onEditActivity, onDeleteActivity }) {
            return (
                <div className="card" style={{ border: `1px solid ${colors.grey200}` }}>
                    <div style={{ height: '4px', backgroundColor: getPillarColor(pillarIndex) }} />
                    <div style={{ padding: '20px' }}>
                        <div style={{ display: 'flex', alignItems: 'start', justifyContent: 'space-between', marginBottom: '16px' }}>
                            <div style={{ flex: 1 }}>
                                <div style={{ fontSize: '11px', fontWeight: '600', marginBottom: '8px', color: colors.grey500, textTransform: 'uppercase', letterSpacing: '0.5px' }}>
                                    Pillar {pillarIndex + 1}
                                </div>
                                <h3 style={{ fontSize: '18px', fontWeight: '600', color: colors.black }}>
                                    {pillar.title}
                                </h3>
                            </div>
                            {editMode && (
                                <div style={{ display: 'flex', gap: '4px' }}>
                                    <button
                                        className="button"
                                        style={{ background: 'transparent', padding: '8px', borderRadius: '8px', color: colors.grey400 }}
                                        onClick={onEdit}
                                        aria-label={`Edit pillar: ${pillar.title}`}
                                    >
                                        <EditIcon />
                                    </button>
                                    <button
                                        className="button"
                                        style={{ background: 'transparent', padding: '8px', borderRadius: '8px', color: colors.orange500 }}
                                        onClick={onDelete}
                                        aria-label={`Delete pillar: ${pillar.title}`}
                                    >
                                        <TrashIcon />
                                    </button>
                                </div>
                            )}
                        </div>

                        {pillar.okrs.map((okr) => (
                            <OKRBlock
                                key={okr.id}
                                okr={okr}
                                pillarId={pillar.id}
                                editMode={editMode}
                                onEdit={() => onEditOKR(okr.id)}
                                onDelete={() => onDeleteOKR(okr.id)}
                                onAddInitiative={() => onAddInitiative(okr.id)}
                                onEditInitiative={(initId) => onEditInitiative(okr.id, initId)}
                                onDeleteInitiative={(initId) => onDeleteInitiative(okr.id, initId)}
                                onAddActivity={(initId) => onAddActivity(okr.id, initId)}
                                onEditActivity={(initId, idx) => onEditActivity(okr.id, initId, idx)}
                                onDeleteActivity={(initId, idx) => onDeleteActivity(okr.id, initId, idx)}
                            />
                        ))}

                        {editMode && (
                            <button
                                className="button"
                                style={{
                                    width: '100%',
                                    padding: '8px',
                                    backgroundColor: colors.orange100,
                                    border: `1px solid ${colors.orange200}`,
                                    borderRadius: '8px',
                                    color: colors.orange500,
                                    fontSize: '14px',
                                    fontWeight: '600',
                                    display: 'flex',
                                    alignItems: 'center',
                                    justifyContent: 'center',
                                    gap: '4px',
                                }}
                                onClick={onAddOKR}
                                aria-label="Add OKR"
                            >
                                <PlusIcon /> Add OKR
                            </button>
                        )}
                    </div>
                </div>
            );
        }

        // --- Main app ---
        function App() {
            const [title, setTitle] = useState('Strategy Execution Builder');
            const [subtitle, setSubtitle] = useState('PwC Strategy Framework | 2025');
            const [mission, setMission] = useState('Connecting strategy to execution');
            const [pillars, setPillars] = useState([]);
            const [editDialog, setEditDialog] = useState({ open: false, type: '', value: '', path: null });
            const [confirmDialog, setConfirmDialog] = useState({ open: false, message: '', onConfirm: null });
            const [examplesDialog, setExamplesDialog] = useState(false);
            const [exportDialog, setExportDialog] = useState(false);
            const [editMode, setEditMode] = useState(true);
            const [loaded, setLoaded] = useState(false);

            // Load from localStorage on mount
            useEffect(() => {
                try {
                    const saved = localStorage.getItem('strategy-execution');
                    if (saved) {
                        const data = JSON.parse(saved);
                        if (data.title) setTitle(data.title);
                        if (data.subtitle) setSubtitle(data.subtitle);
                        if (data.mission) setMission(data.mission);
                        if (data.pillars) setPillars(data.pillars);
                    } else {
                        setPillars(assignNewIds(examples.blank).pillars);
                    }
                } catch (e) {
                    setPillars(assignNewIds(examples.blank).pillars);
                }
                setLoaded(true);
            }, []);

            // Persist to localStorage whenever content changes
            useEffect(() => {
                if (!loaded) return;
                try {
                    localStorage.setItem('strategy-execution', JSON.stringify({ title, subtitle, mission, pillars }));
                } catch (e) {}
            }, [title, subtitle, mission, pillars, loaded]);

            // Keep browser tab title in sync
            useEffect(() => {
                document.title = title || 'Strategy Execution Builder';
            }, [title]);

            // --- Helpers ---
            const openConfirm = (message, onConfirm) => {
                setConfirmDialog({ open: true, message, onConfirm });
            };

            const closeConfirm = () => setConfirmDialog({ open: false, message: '', onConfirm: null });

            const openEdit = (type, value, path = null) => {
                setEditDialog({ open: true, type, value, path });
            };

            const closeEdit = () => setEditDialog({ open: false, type: '', value: '', path: null });

            // --- Load example (with overwrite warning if content exists) ---
            const applyExample = (exampleKey) => {
                const fresh = assignNewIds(examples[exampleKey]);
                setTitle(fresh.title);
                setSubtitle(fresh.subtitle);
                setMission(fresh.mission);
                setPillars(fresh.pillars);
                setExamplesDialog(false);
            };

            const handleLoadExample = (exampleKey) => {
                const hasContent = pillars.some((p) => p.okrs.length > 0 || p.title);
                if (hasContent) {
                    setExamplesDialog(false);
                    openConfirm(
                        'Loading an example will replace your current strategy. This cannot be undone.',
                        () => {
                            applyExample(exampleKey);
                            closeConfirm();
                        }
                    );
                } else {
                    applyExample(exampleKey);
                }
            };

            // --- State mutations ---
            const addPillar = () => {
                const id = nextId();
                setPillars((prev) => [...prev, { id, title: '', okrs: [] }]);
                // Open edit immediately so the user can name the new pillar
                setTimeout(() => openEdit('pillar', '', { pillarId: id }), 0);
            };

            const addOKR = (pillarId) => {
                const id = nextId();
                setPillars((prev) => prev.map((p) =>
                    p.id === pillarId
                        ? { ...p, okrs: [...p.okrs, { id, title: '', initiatives: [] }] }
                        : p
                ));
                setTimeout(() => openEdit('okr', '', { pillarId, okrId: id }), 0);
            };

            const addInitiative = (pillarId, okrId) => {
                const id = nextId();
                setPillars((prev) => prev.map((p) =>
                    p.id === pillarId
                        ? {
                            ...p,
                            okrs: p.okrs.map((o) =>
                                o.id === okrId
                                    ? { ...o, initiatives: [...o.initiatives, { id, title: '', activities: [] }] }
                                    : o
                            ),
                        }
                        : p
                ));
                setTimeout(() => openEdit('initiative', '', { pillarId, okrId, initiativeId: id }), 0);
            };

            const addActivity = (pillarId, okrId, initiativeId) => {
                const newIdx = (() => {
                    const p = pillars.find((p) => p.id === pillarId);
                    const o = p?.okrs.find((o) => o.id === okrId);
                    const i = o?.initiatives.find((i) => i.id === initiativeId);
                    return i ? i.activities.length : 0;
                })();
                setPillars((prev) => prev.map((p) =>
                    p.id === pillarId
                        ? {
                            ...p,
                            okrs: p.okrs.map((o) =>
                                o.id === okrId
                                    ? {
                                        ...o,
                                        initiatives: o.initiatives.map((i) =>
                                            i.id === initiativeId
                                                ? { ...i, activities: [...i.activities, ''] }
                                                : i
                                        ),
                                    }
                                    : o
                            ),
                        }
                        : p
                ));
                setTimeout(() => openEdit('activity', '', { pillarId, okrId, initiativeId, activityIdx: newIdx }), 0);
            };

            const deletePillar = (pillarId) => {
                const pillar = pillars.find((p) => p.id === pillarId);
                openConfirm(
                    `Delete "${pillar?.title || 'this pillar'}" and all its OKRs, initiatives, and activities? This cannot be undone.`,
                    () => {
                        setPillars((prev) => prev.filter((p) => p.id !== pillarId));
                        closeConfirm();
                    }
                );
            };

            const deleteOKR = (pillarId, okrId) => {
                setPillars((prev) => prev.map((p) =>
                    p.id === pillarId ? { ...p, okrs: p.okrs.filter((o) => o.id !== okrId) } : p
                ));
            };

            const deleteInitiative = (pillarId, okrId, initiativeId) => {
                setPillars((prev) => prev.map((p) =>
                    p.id === pillarId
                        ? {
                            ...p,
                            okrs: p.okrs.map((o) =>
                                o.id === okrId
                                    ? { ...o, initiatives: o.initiatives.filter((i) => i.id !== initiativeId) }
                                    : o
                            ),
                        }
                        : p
                ));
            };

            const deleteActivity = (pillarId, okrId, initiativeId, activityIdx) => {
                setPillars((prev) => prev.map((p) =>
                    p.id === pillarId
                        ? {
                            ...p,
                            okrs: p.okrs.map((o) =>
                                o.id === okrId
                                    ? {
                                        ...o,
                                        initiatives: o.initiatives.map((i) =>
                                            i.id === initiativeId
                                                ? { ...i, activities: i.activities.filter((_, idx) => idx !== activityIdx) }
                                                : i
                                        ),
                                    }
                                    : o
                            ),
                        }
                        : p
                ));
            };

            const saveEdit = (value) => {
                const { type, path } = editDialog;
                if (type === 'title') {
                    setTitle(value);
                } else if (type === 'subtitle') {
                    setSubtitle(value);
                } else if (type === 'mission') {
                    setMission(value);
                } else if (type === 'pillar') {
                    setPillars((prev) => prev.map((p) =>
                        p.id === path.pillarId ? { ...p, title: value } : p
                    ));
                } else if (type === 'okr') {
                    setPillars((prev) => prev.map((p) =>
                        p.id === path.pillarId
                            ? { ...p, okrs: p.okrs.map((o) => o.id === path.okrId ? { ...o, title: value } : o) }
                            : p
                    ));
                } else if (type === 'initiative') {
                    setPillars((prev) => prev.map((p) =>
                        p.id === path.pillarId
                            ? {
                                ...p,
                                okrs: p.okrs.map((o) =>
                                    o.id === path.okrId
                                        ? { ...o, initiatives: o.initiatives.map((i) => i.id === path.initiativeId ? { ...i, title: value } : i) }
                                        : o
                                ),
                            }
                            : p
                    ));
                } else if (type === 'activity') {
                    setPillars((prev) => prev.map((p) =>
                        p.id === path.pillarId
                            ? {
                                ...p,
                                okrs: p.okrs.map((o) =>
                                    o.id === path.okrId
                                        ? {
                                            ...o,
                                            initiatives: o.initiatives.map((i) =>
                                                i.id === path.initiativeId
                                                    ? { ...i, activities: i.activities.map((a, idx) => idx === path.activityIdx ? value : a) }
                                                    : i
                                            ),
                                        }
                                        : o
                                ),
                            }
                            : p
                    ));
                }
                closeEdit();
            };

            // --- Export handlers ---
            const getAppCSS = () => {
                const el = document.getElementById('app-styles');
                return el ? el.textContent : '';
            };

            const exportAsHTML = () => {
                setExportDialog(false);
                setTimeout(() => {
                    const content = document.getElementById('strategy-view').cloneNode(true);
                    // Remove all interactive controls from the static snapshot
                    content.querySelectorAll('button').forEach((el) => el.remove());
                    const html = `<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>${title}</title>
    <style>${getAppCSS()}</style>
</head>
<body>
    ${content.outerHTML}
</body>
</html>`;
                    downloadBlob(html, 'text/html', 'strategy-execution.html');
                }, 100);
            };

            const exportAsMarkdown = () => {
                setExportDialog(false);
                setTimeout(() => {
                    let md = `# ${title}\n\n${subtitle}\n\n`;
                    md += `## Mission Statement\n\n${mission}\n\n`;
                    md += `## Strategic Framework\n\n`;
                    pillars.forEach((pillar, pIdx) => {
                        md += `### ${pIdx + 1}. ${pillar.title}\n\n`;
                        pillar.okrs.forEach((okr, oIdx) => {
                            md += `#### OKR ${oIdx + 1}: ${okr.title}\n\n`;
                            okr.initiatives.forEach((initiative, iIdx) => {
                                md += `**Initiative ${iIdx + 1}:** ${initiative.title}\n\nActivities:\n`;
                                initiative.activities.forEach((activity) => {
                                    md += `- ${activity}\n`;
                                });
                                md += `\n`;
                            });
                        });
                    });
                    downloadBlob(md, 'text/markdown', 'strategy-execution.md');
                }, 100);
            };

            const exportAsCSV = () => {
                setExportDialog(false);
                setTimeout(() => {
                    let csv = 'Pillar,OKR,Initiative,Activity\n';
                    pillars.forEach((pillar) => {
                        pillar.okrs.forEach((okr) => {
                            okr.initiatives.forEach((initiative) => {
                                initiative.activities.forEach((activity) => {
                                    csv += `${escapeCSV(pillar.title)},${escapeCSV(okr.title)},${escapeCSV(initiative.title)},${escapeCSV(activity)}\n`;
                                });
                            });
                        });
                    });
                    downloadBlob(csv, 'text/csv', 'strategy-execution.csv');
                }, 100);
            };

            const exportAsPDF = () => {
                setExportDialog(false);
                setTimeout(async () => {
                    const element = document.getElementById('strategy-view');
                    const canvas = await html2canvas(element, { scale: 2, backgroundColor: '#F7F8FA', logging: false });
                    const imgData = canvas.toDataURL('image/png');
                    const pdf = new jspdf.jsPDF('p', 'mm', 'a4');
                    const pdfWidth = pdf.internal.pageSize.getWidth();
                    const pdfHeight = pdf.internal.pageSize.getHeight();
                    const ratio = Math.min(pdfWidth / canvas.width, pdfHeight / canvas.height);
                    const imgX = (pdfWidth - canvas.width * ratio) / 2;
                    pdf.addImage(imgData, 'PNG', imgX, 0, canvas.width * ratio, canvas.height * ratio);
                    pdf.save('strategy-execution.pdf');
                }, 300);
            };

            const exportAsPNG = () => {
                setExportDialog(false);
                setTimeout(async () => {
                    const element = document.getElementById('strategy-view');
                    const canvas = await html2canvas(element, { scale: 2, backgroundColor: '#F7F8FA', logging: false });
                    canvas.toBlob((blob) => {
                        const url = URL.createObjectURL(blob);
                        const a = document.createElement('a');
                        a.href = url;
                        a.download = 'strategy-execution.png';
                        a.click();
                        URL.revokeObjectURL(url);
                    });
                }, 300);
            };

            const handleExport = (format) => {
                const handlers = { pdf: exportAsPDF, png: exportAsPNG, html: exportAsHTML, markdown: exportAsMarkdown, csv: exportAsCSV };
                handlers[format]?.();
            };

            // --- Stats ---
            const getTotalCount = (type) => {
                if (type === 'pillars') return pillars.length;
                if (type === 'okrs') return pillars.reduce((acc, p) => acc + p.okrs.length, 0);
                if (type === 'initiatives') return pillars.reduce((acc, p) => acc + p.okrs.reduce((a, o) => a + o.initiatives.length, 0), 0);
                if (type === 'activities') return pillars.reduce((acc, p) => acc + p.okrs.reduce((a, o) => a + o.initiatives.reduce((i, init) => i + init.activities.length, 0), 0), 0);
                return 0;
            };

            if (!loaded) return null;

            return (
                <div id="strategy-view" style={{ minHeight: '100vh', backgroundColor: '#F7F8FA' }}>

                    {/* ‚îÄ‚îÄ Header ‚îÄ‚îÄ */}
                    <div style={{ backgroundColor: colors.white, borderBottom: `1px solid ${colors.grey200}` }}>
                        <div style={{ maxWidth: '1280px', margin: '0 auto', padding: '24px 32px' }}>
                            <div style={{ display: 'flex', alignItems: 'center', justifyContent: 'space-between' }}>
                                <div>
                                    <div style={{ display: 'flex', alignItems: 'center', gap: '12px' }}>
                                        <h1 style={{ fontSize: '30px', fontWeight: 'bold', color: colors.black }}>
                                            {title}
                                        </h1>
                                        {editMode && (
                                            <button
                                                className="button"
                                                style={{ background: 'transparent', padding: '8px', borderRadius: '8px', color: colors.grey500 }}
                                                onClick={() => openEdit('title', title)}
                                                aria-label="Edit title"
                                            >
                                                <EditIcon />
                                            </button>
                                        )}
                                    </div>
                                    <div style={{ display: 'flex', alignItems: 'center', gap: '12px', marginTop: '4px' }}>
                                        <p style={{ fontSize: '14px', color: colors.grey500 }}>{subtitle}</p>
                                        {editMode && (
                                            <button
                                                className="button"
                                                style={{ background: 'transparent', padding: '4px', borderRadius: '8px', color: colors.grey400 }}
                                                onClick={() => openEdit('subtitle', subtitle)}
                                                aria-label="Edit subtitle"
                                            >
                                                <EditIcon />
                                            </button>
                                        )}
                                    </div>
                                </div>

                                <div style={{ display: 'flex', gap: '12px' }}>
                                    <button
                                        className="button"
                                        style={{
                                            backgroundColor: editMode ? colors.orange500 : colors.white,
                                            color: editMode ? colors.white : colors.grey500,
                                            border: `2px solid ${editMode ? colors.orange500 : colors.grey300}`,
                                            padding: '12px 24px',
                                            borderRadius: '8px',
                                            display: 'flex',
                                            alignItems: 'center',
                                            gap: '8px',
                                        }}
                                        onClick={() => setEditMode(!editMode)}
                                        aria-label={editMode ? 'Turn off edit mode' : 'Turn on edit mode'}
                                    >
                                        <SettingsIcon /> {editMode ? 'Edit Mode On' : 'Edit Mode Off'}
                                    </button>

                                    <button
                                        className="button"
                                        style={{
                                            backgroundColor: colors.orange500,
                                            color: colors.white,
                                            padding: '12px 24px',
                                            borderRadius: '8px',
                                            display: 'flex',
                                            alignItems: 'center',
                                            gap: '8px',
                                        }}
                                        onClick={() => setExamplesDialog(true)}
                                        aria-label="Load example strategy"
                                    >
                                        <BookIcon /> Load Example
                                    </button>

                                    <div className="tooltip-container">
                                        {editMode && <div className="tooltip">Turn off Edit Mode to export</div>}
                                        <button
                                            className="button"
                                            style={{
                                                backgroundColor: editMode ? colors.grey300 : colors.orange500,
                                                color: editMode ? colors.grey500 : colors.white,
                                                padding: '12px 24px',
                                                borderRadius: '8px',
                                                display: 'flex',
                                                alignItems: 'center',
                                                gap: '8px',
                                                cursor: editMode ? 'not-allowed' : 'pointer',
                                            }}
                                            onClick={() => !editMode && setExportDialog(true)}
                                            disabled={editMode}
                                            aria-label="Export strategy"
                                        >
                                            <DownloadIcon /> Export
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {/* ‚îÄ‚îÄ Stats bar ‚îÄ‚îÄ */}
                    <div style={{ backgroundColor: colors.white, borderBottom: `1px solid ${colors.grey200}` }}>
                        <div style={{ maxWidth: '1280px', margin: '0 auto', padding: '24px 32px' }}>
                            <div style={{ display: 'grid', gridTemplateColumns: 'repeat(4, 1fr)', gap: '32px' }}>
                                <div>
                                    <div style={{ fontSize: '11px', fontWeight: '600', marginBottom: '8px', color: colors.grey500, textTransform: 'uppercase', letterSpacing: '0.5px' }}>
                                        Strategic Pillars
                                    </div>
                                    <div style={{ display: 'flex', alignItems: 'baseline', gap: '8px' }}>
                                        <div style={{ fontSize: '36px', fontWeight: 'bold', color: colors.black }}>
                                            {getTotalCount('pillars')}
                                        </div>
                                        <TrendingIcon />
                                    </div>
                                </div>
                                <div>
                                    <div style={{ fontSize: '11px', fontWeight: '600', marginBottom: '8px', color: colors.grey500, textTransform: 'uppercase', letterSpacing: '0.5px' }}>
                                        Total OKRs
                                    </div>
                                    <div style={{ fontSize: '36px', fontWeight: 'bold', color: colors.orange500 }}>
                                        {getTotalCount('okrs')}
                                    </div>
                                </div>
                                <div>
                                    <div style={{ fontSize: '11px', fontWeight: '600', marginBottom: '8px', color: colors.grey500, textTransform: 'uppercase', letterSpacing: '0.5px' }}>
                                        Initiatives
                                    </div>
                                    <div style={{ fontSize: '36px', fontWeight: 'bold', color: colors.orange400 }}>
                                        {getTotalCount('initiatives')}
                                    </div>
                                </div>
                                <div>
                                    <div style={{ fontSize: '11px', fontWeight: '600', marginBottom: '8px', color: colors.grey500, textTransform: 'uppercase', letterSpacing: '0.5px' }}>
                                        Activities
                                    </div>
                                    <div style={{ fontSize: '36px', fontWeight: 'bold', color: colors.orange300 }}>
                                        {getTotalCount('activities')}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {/* ‚îÄ‚îÄ Main content ‚îÄ‚îÄ */}
                    <div style={{ maxWidth: '1280px', margin: '0 auto', padding: '32px' }}>

                        {/* Mission statement */}
                        <div style={{
                            marginBottom: '32px',
                            padding: '24px',
                            borderRadius: '12px',
                            border: `1px solid ${colors.grey200}`,
                            backgroundColor: colors.white,
                        }}>
                            <div style={{ display: 'flex', alignItems: 'center', justifyContent: 'space-between' }}>
                                <div style={{ flex: 1 }}>
                                    <div style={{ fontSize: '11px', fontWeight: '600', marginBottom: '8px', color: colors.orange500, textTransform: 'uppercase', letterSpacing: '0.5px' }}>
                                        Mission Statement
                                    </div>
                                    <h2 style={{ fontSize: '24px', fontWeight: '600', color: colors.black }}>
                                        {mission}
                                    </h2>
                                </div>
                                {editMode && (
                                    <button
                                        className="button"
                                        style={{ background: 'transparent', padding: '10px', borderRadius: '8px', color: colors.grey500 }}
                                        onClick={() => openEdit('mission', mission)}
                                        aria-label="Edit mission statement"
                                    >
                                        <EditIcon />
                                    </button>
                                )}
                            </div>
                        </div>

                        {/* Pillar grid */}
                        <div style={{
                            display: 'grid',
                            gridTemplateColumns: 'repeat(auto-fit, minmax(350px, 1fr))',
                            gap: '24px',
                            marginBottom: '32px',
                        }}>
                            {pillars.map((pillar, pillarIndex) => (
                                <PillarCard
                                    key={pillar.id}
                                    pillar={pillar}
                                    pillarIndex={pillarIndex}
                                    editMode={editMode}
                                    onEdit={() => openEdit('pillar', pillar.title, { pillarId: pillar.id })}
                                    onDelete={() => deletePillar(pillar.id)}
                                    onAddOKR={() => addOKR(pillar.id)}
                                    onEditOKR={(okrId) => {
                                        const okr = pillar.okrs.find((o) => o.id === okrId);
                                        openEdit('okr', okr?.title || '', { pillarId: pillar.id, okrId });
                                    }}
                                    onDeleteOKR={(okrId) => deleteOKR(pillar.id, okrId)}
                                    onAddInitiative={(okrId) => addInitiative(pillar.id, okrId)}
                                    onEditInitiative={(okrId, initId) => {
                                        const initiative = pillar.okrs.find((o) => o.id === okrId)?.initiatives.find((i) => i.id === initId);
                                        openEdit('initiative', initiative?.title || '', { pillarId: pillar.id, okrId, initiativeId: initId });
                                    }}
                                    onDeleteInitiative={(okrId, initId) => deleteInitiative(pillar.id, okrId, initId)}
                                    onAddActivity={(okrId, initId) => addActivity(pillar.id, okrId, initId)}
                                    onEditActivity={(okrId, initId, idx) => {
                                        const activity = pillar.okrs.find((o) => o.id === okrId)?.initiatives.find((i) => i.id === initId)?.activities[idx];
                                        openEdit('activity', activity || '', { pillarId: pillar.id, okrId, initiativeId: initId, activityIdx: idx });
                                    }}
                                    onDeleteActivity={(okrId, initId, idx) => deleteActivity(pillar.id, okrId, initId, idx)}
                                />
                            ))}
                        </div>

                        {editMode && (
                            <div style={{ display: 'flex', justifyContent: 'center' }}>
                                <button
                                    className="button"
                                    style={{
                                        backgroundColor: colors.orange500,
                                        color: colors.white,
                                        padding: '12px 32px',
                                        borderRadius: '8px',
                                        fontSize: '16px',
                                        fontWeight: '600',
                                        display: 'flex',
                                        alignItems: 'center',
                                        gap: '8px',
                                    }}
                                    onClick={addPillar}
                                    aria-label="Add strategic pillar"
                                >
                                    <PlusIcon /> Add Strategic Pillar
                                </button>
                            </div>
                        )}
                    </div>

                    {/* ‚îÄ‚îÄ Modals ‚îÄ‚îÄ */}
                    {editDialog.open && (
                        <EditModal editDialog={editDialog} onClose={closeEdit} onSave={saveEdit} />
                    )}

                    {confirmDialog.open && (
                        <ConfirmModal
                            message={confirmDialog.message}
                            onConfirm={confirmDialog.onConfirm}
                            onCancel={closeConfirm}
                        />
                    )}

                    {examplesDialog && (
                        <ExamplesModal onClose={() => setExamplesDialog(false)} onLoad={handleLoadExample} />
                    )}

                    {exportDialog && (
                        <ExportModal onClose={() => setExportDialog(false)} onExport={handleExport} />
                    )}
                </div>
            );
        }

        // React 18 createRoot API (replaces the deprecated ReactDOM.render)
        ReactDOM.createRoot(document.getElementById('root')).render(<App />);
    </script>
</body>
</html>
