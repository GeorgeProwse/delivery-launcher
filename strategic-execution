        // --- Modal base: focus trap + Escape to close ---
        function Modal({ onClose, children, width = '500px' }) {
            const contentRef = useRef(null);

            useEffect(() => {
                // Focus first focusable element on open
                const firstFocusable = contentRef.current?.querySelector(
                    'button, input, textarea, select, [tabindex]:not([tabindex="-1"])'
                );
                firstFocusable?.focus();
            }, []);

            useEffect(() => {
                const handleKeyDown = (e) => {
                    if (e.key === 'Escape') {
                        onClose();
                        return;
                    }
                    // Focus trap
                    if (e.key === 'Tab' && contentRef.current) {
                        const focusable = Array.from(
                            contentRef.current.querySelectorAll(
                                'button, input, textarea, select, [tabindex]:not([tabindex="-1"])'
                            )
                        );
                        const first = focusable[0];
                        const last = focusable[focusable.length - 1];
                        if (e.shiftKey && document.activeElement === first) {
                            e.preventDefault();
                            last?.focus();
                        } else if (!e.shiftKey && document.activeElement === last) {
                            e.preventDefault();
                            first?.focus();
                        }
                    }
                };
                document.addEventListener('keydown', handleKeyDown);
                return () => document.removeEventListener('keydown', handleKeyDown);
            }, [onClose]);

            return (
                <div
                    className="modal-overlay"
                    onClick={onClose}
                    role="dialog"
                    aria-modal="true"
                >
                    <div
                        className="modal-content"
                        ref={contentRef}
                        style={{ width, border: `1px solid ${colors.grey200}` }}
                        onClick={(e) => e.stopPropagation()}
                    >
                        {children}
                    </div>
                </div>
            );
        }

        // --- Edit dialog ---
        // Mission uses a textarea; all other fields use a single-line input.
        // Enter submits for single-line fields.
        const EDIT_LABELS = {
            title: 'Title',
            subtitle: 'Subtitle',
            mission: 'Mission Statement',
            pillar: 'Pillar',
            okr: 'OKR',
            initiative: 'Initiative',
            activity: 'Activity',
        };

        function EditModal({ editDialog, onClose, onSave }) {
            const [value, setValue] = useState(editDialog.value);
            const isMultiline = editDialog.type === 'mission';
            const label = EDIT_LABELS[editDialog.type] || editDialog.type;

            const handleKeyDown = (e) => {
                if (e.key === 'Enter' && !e.shiftKey && !isMultiline) {
                    onSave(value);
                }
            };

            return (
                <Modal onClose={onClose} width="500px">
                    <div style={{
                        display: 'flex',
                        alignItems: 'center',
                        justifyContent: 'space-between',
                        marginBottom: '24px',
                    }}>
                        <h2 style={{ fontSize: '20px', fontWeight: '600', color: colors.black }}>
                            Edit {label}
                        </h2>
                        <button
                            className="button"
                            style={{ background: 'transparent', padding: '8px', borderRadius: '8px', color: colors.grey500 }}
                            onClick={onClose}
                            aria-label="Close dialog"
                        >
                            <XIcon />
                        </button>
                    </div>

                    {isMultiline ? (
                        <textarea
                            className="input"
                            value={value}
                            onChange={(e) => setValue(e.target.value)}
                            placeholder={`Enter ${label}`}
                            autoFocus
                            rows={4}
                            style={{ marginBottom: '24px', resize: 'vertical' }}
                        />
                    ) : (
                        <input
                            className="input"
                            value={value}
                            onChange={(e) => setValue(e.target.value)}
                            placeholder={`Enter ${label}`}
                            autoFocus
                            onKeyDown={handleKeyDown}
                            style={{ marginBottom: '24px' }}
                        />
                    )}

                    <div style={{ display: 'flex', gap: '12px', justifyContent: 'flex-end' }}>
                        <button
                            className="button"
                            style={{
                                border: `2px solid ${colors.grey300}`,
                                backgroundColor: colors.white,
                                color: colors.grey500,
                                padding: '10px 16px',
                                borderRadius: '8px',
                            }}
                            onClick={onClose}
                        >
                            Cancel
                        </button>
                        <button
                            className="button"
                            style={{
                                backgroundColor: colors.orange500,
                                color: colors.white,
                                padding: '10px 16px',
                                borderRadius: '8px',
                            }}
                            onClick={() => onSave(value)}
                        >
                            Save Changes
                        </button>
                    </div>
                </Modal>
            );
        }

        // --- Confirmation dialog ---
        function ConfirmModal({ message, confirmLabel = 'Confirm', onConfirm, onCancel }) {
            return (
                <Modal onClose={onCancel} width="420px">
                    <h2 style={{ fontSize: '20px', fontWeight: '600', color: colors.black, marginBottom: '16px' }}>
                        Are you sure?
                    </h2>
                    <p style={{ fontSize: '14px', color: colors.grey500, lineHeight: '1.6', marginBottom: '24px' }}>
                        {message}
                    </p>
                    <div style={{ display: 'flex', gap: '12px', justifyContent: 'flex-end' }}>
                        <button
                            className="button"
                            style={{
                                border: `2px solid ${colors.grey300}`,
                                backgroundColor: colors.white,
                                color: colors.grey500,
                                padding: '10px 16px',
                                borderRadius: '8px',
                            }}
                            onClick={onCancel}
                        >
                            Cancel
                        </button>
                        <button
                            className="button"
                            style={{
                                backgroundColor: colors.orange500,
                                color: colors.white,
                                padding: '10px 16px',
                                borderRadius: '8px',
                            }}
                            onClick={onConfirm}
                        >
                            {confirmLabel}
                        </button>
                    </div>
                </Modal>
            );
        }

        // --- Examples picker dialog ---
        function ExamplesModal({ onClose, onLoad }) {
