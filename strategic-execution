        .button {
            cursor: pointer;
            border: none;
            font-family: inherit;
            font-weight: 600;
            transition: all 0.2s;
        }
        .button:hover {
            opacity: 0.9;
        }
        .input {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #CBD1D6;
            border-radius: 8px;
            font-family: inherit;
            font-size: 14px;
        }
        .input:focus {
            outline: none;
            border-color: #FD5108;
        }
        .modal-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.4);
            backdrop-filter: blur(4px);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1000;
        }
        .modal-content {
            background: white;
            border-radius: 12px;
            padding: 32px;
            max-width: 90%;
            max-height: 90vh;
            overflow-y: auto;
        }
        .tooltip-container {
            position: relative;
            display: inline-block;
        }
        .tooltip {
            position: absolute;
            bottom: calc(100% + 8px);
            left: 50%;
            transform: translateX(-50%);
            background: #2D3748;
            color: white;
            padding: 8px 12px;
            border-radius: 6px;
            font-size: 13px;
            white-space: nowrap;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.2s;
            z-index: 1001;
        }
        .tooltip::after {
            content: '';
            position: absolute;
            top: 100%;
            left: 50%;
            transform: translateX(-50%);
            border: 6px solid transparent;
            border-top-color: #2D3748;
        }
        .tooltip-container:hover .tooltip {
            opacity: 1;
        }
    </style>
