                            { id: 1, title: 'Enter 3 new geographic markets', initiatives: [{ id: 1, title: 'Develop market entry strategy', activities: ['Conduct market analysis', 'Identify target segments', 'Create go-to-market plan', 'Hire local teams'] }] },
                            { id: 2, title: 'Grow market share by 15%', initiatives: [{ id: 1, title: 'Strengthen competitive positioning', activities: ['Analyze competitive landscape', 'Refine value proposition', 'Launch brand awareness campaign', 'Develop partner channels'] }] }
                        ]
