export function derivePriority(score, confidence) {
  if (!score) return "";
  if (score <= 2 || confidence === "Low") return "High";
  if (score === 3 || confidence === "Medium") return "Medium";
  if (score === 4) return "Low";
  return "Sustain";
}

export function deriveUpliftWave(priority) {
  if (!priority) return "";
  const map = {
    High: "0–90 days",
    Medium: "3–6 months",
    Low: "6–12 months",
    Sustain: "BAU / optimise",
  };
  return map[priority] || "";
}

export function suggestedRecommendationFor(question, score) {
  if (!score) return "";
  const key = String(score);
  return (question.recommendedActionsByLevel && question.recommendedActionsByLevel[key])
    ? question.recommendedActionsByLevel[key]
    : "";
}

export function deriveRecommendation(question, response) {
  const suggested = suggestedRecommendationFor(question, response.score);
  const priority = derivePriority(response.score, response.confidence);
  const upliftWave = deriveUpliftWave(priority);
  return {
    questionId: question.id,
    suggestedRecommendation: suggested,
    priority,
    upliftWave,
  };
}

function safeAvg(values) {
  if (!values.length) return undefined;
  return values.reduce((a, b) => a + b, 0) / values.length;
}

export function computeScores(model, responses) {
  const respByQ = new Map(responses.map(r => [r.questionId, r]));
  const qByDomain = new Map();
  for (const q of model.questions) {
    if (!qByDomain.has(q.domainId)) qByDomain.set(q.domainId, []);
    qByDomain.get(q.domainId).push(q);
  }

  const domainSummaries = model.domains.map(d => {
    const qs = qByDomain.get(d.id) || [];
    const scored = [];
    const conf = { high: 0, medium: 0, low: 0 };
    for (const q of qs) {
      const r = respByQ.get(q.id);
      if (r && r.score) scored.push(r.score);
      if (r && r.confidence === "High") conf.high += 1;
      if (r && r.confidence === "Medium") conf.medium += 1;
      if (r && r.confidence === "Low") conf.low += 1;
    }
    return {
      domainId: d.id,
      domainName: d.name,
      domainScore: safeAvg(scored),
      weight: (typeof d.defaultWeight === "number" ? d.defaultWeight : 1),
      confidenceCounts: conf,
    };
  });

  let num = 0;
  let den = 0;
  for (const ds of domainSummaries) {
    if (typeof ds.domainScore === "number") {
      num += ds.domainScore * ds.weight;
      den += ds.weight;
    }
  }
  const overallScore = den ? (num / den) : undefined;

  return { overallScore, domainSummaries };
}

export function deriveAllRecommendations(model, responses) {
  const respByQ = new Map(responses.map(r => [r.questionId, r]));
  const out = [];
  for (const q of model.questions) {
    const r = respByQ.get(q.id);
    if (!r) continue;
    out.push(deriveRecommendation(q, r));
  }
  return out;
}

// Global fallback
const globalApi = {
  modelConfig,
  derivePriority,
  deriveUpliftWave,
  suggestedRecommendationFor,
  deriveRecommendation,
  deriveAllRecommendations,
  computeScores,
};

try {
  if (typeof window !== "undefined") {
    window.PpmPmoMaturityModel = globalApi;
  }
} catch (_) {}

export default globalApi;
